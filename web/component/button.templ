package component

templ Button(variant string) {
	<button
		type="submit"
		class={ "flex w-full justify-center rounded-md px-3 py-1.5 text-sm/6 font-semibold shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-500",
      templ.KV("bg-teal-600 hover:bg-teal-500 text-white", variant == "default") }
	>
		{ children... }
	</button>
}
