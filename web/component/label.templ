package component

type LabelAttrs struct {
	For      string
	Class    string
	LinkText string
	Link     string
}

func (la LabelAttrs) ToAttrs() templ.Attributes {
	return templ.Attributes{
		"for": la.For,
	}

}

templ Label(la LabelAttrs) {
	<div class="mb-2 flex items-center justify-between">
		<label for={ la.For } class="block text-sm/6 font-medium text-white">
			{ children... }
		</label>
		if la.LinkText != "" {
			@Link(la.Link) {
				{ la.LinkText }
			}
		}
	</div>
}
